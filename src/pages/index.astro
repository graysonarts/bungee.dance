---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Sections from "../components/Sections.astro";
import Stats from "../components/Stats.astro";
import Cta from "../components/Cta.astro";
import Footer from "../components/Footer.astro";

const fitnessSongs = Object.values(
  import.meta.glob("./songs/fitness/*.md", { eager: true })
);

const danceSongs = Object.values(
  import.meta.glob("./songs/dance/*.md", { eager: true })
);
---

<Layout>
  <Hero
    title="Choreography Repository"
    subtitle="A curated collection of choreography for bungee fitness classes. Designed as a reference for students and the growing bungee fitness community."
  />
  <Sections />
  <Stats
    fitnessSongCount={fitnessSongs.length}
    danceSongCount={danceSongs.length}
  />
  <Cta />
  <Footer />
</Layout>
