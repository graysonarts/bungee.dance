---
import "../styles/global.css";
const { fitnessSongCount, danceSongCount } = Astro.props;
---

<section class="stats-section">
  <div class="stats-grid">
    <div class="stat-item">
      <div class="stat-number">{fitnessSongCount}</div>
      <div class="stat-label">Fitness Songs</div>
    </div>
    <div class="stat-item">
      <div class="stat-number">{danceSongCount}</div>
      <div class="stat-label">Dance Songs</div>
    </div>
  </div>
</section>

<style>
  .stats-section {
    padding: 4rem 0;
    background: var(--neutral-50);
    border-top: 1px solid var(--neutral-100);
    border-bottom: 1px solid var(--neutral-100);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    text-align: center;
  }

  .stat-number {
    font-size: 3rem;
    font-weight: 300;
    color: var(--neutral-900);
    margin-bottom: 0.5rem;
  }

  .stat-label {
    color: var(--neutral-500);
    font-size: 0.95rem;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .stats-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>
