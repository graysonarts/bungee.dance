---
import "../styles/global.css";

const { title, subtitle } = Astro.props;
---

<section class="hero">
  <h2 class="hero-title">{title}</h2>
  <p class="hero-subtitle">{subtitle}</p>
</section>

<style>
  .hero {
    padding: 6rem 0 8rem;
    text-align: center;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 300;
    color: var(--neutral-900);
    margin-bottom: 1.5rem;
    letter-spacing: -0.03em;
    line-height: 1.1;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--neutral-500);
    margin-bottom: 3rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    font-weight: 400;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 4rem 0 5rem;
    }

    .hero-title {
      font-size: 2.25rem;
    }

    .hero-subtitle {
      font-size: 1.125rem;
    }
  }
</style>
