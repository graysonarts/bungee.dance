---
import "../styles/global.css";
---

<section class="cta-section">
  <h3 class="cta-title">Ready to experience bungee fitness in Seattle?</h3>
  <a
    href="https://www.newmoonmovementarts.com/classes/#BungeeFitness"
    class="cta-button"
    target="_blank"
  >
    Join Classes
  </a>
</section>

<style>
  .cta-section {
    padding: 6rem 0;
    text-align: center;
  }

  .cta-title {
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--neutral-900);
    margin-bottom: 2rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-button {
    display: inline-block;
    background: var(--accent);
    color: var(--white);
    text-decoration: none;
    padding: 1rem 2rem;
    border-radius: 6px;
    font-weight: 500;
    font-size: 0.95rem;
    transition: all 0.2s ease;
  }

  .cta-button:hover {
    background: #065f46;
    transform: translateY(-1px);
  }

  @media (max-width: 768px) {
    .cta-section {
      padding: 4rem 0;
    }
  }
</style>
