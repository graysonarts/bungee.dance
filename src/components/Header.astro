---
import "../styles/global.css";
import { MusicIcon, SchoolIcon } from "@lucide/astro";
---

<header class="header">
  <div class="nav-container">
    <h1 class="logo">bungee.help</h1>
    <nav class="main-nav">
      <a href="/reference" class="nav-link"
        ><MusicIcon class="nav-icon" />songs</a
      >
      <a href="/studios" class="nav-link"
        ><SchoolIcon class="nav-icon" />studios</a
      >
    </nav>
  </div>
</header>

<style>
  .header {
    padding: 3rem 0;
    border-bottom: 1px solid var(--neutral-100);
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    letter-spacing: -0.02em;
  }

  .main-nav {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--neutral-600);
    font-weight: 500;
    font-size: 0.95rem;
    transition: color 0.2s ease;
  }

  .nav-link:hover {
    color: var(--accent);
  }

  .nav-icon {
    width: 18px;
    height: 18px;
    stroke-width: 1.5;
  }

  @media (max-width: 768px) {
    .header {
      padding: 2rem 0;
    }

    .nav-container {
      flex-direction: column;
      gap: 1.5rem;
    }

    .main-nav {
      gap: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .hero-title {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .nav-card {
      padding: 1.5rem;
    }
  }
</style>
