---
import "../styles/global.css";
import { MusicIcon, SchoolIcon } from "@lucide/astro";
---

<section class="content-section">
  <div class="section-grid">
    <a href="/reference" class="nav-card">
      <MusicIcon class="card-icon" />
      <h3 class="card-title">Songs</h3>
      <p class="card-description">
        Browse choreography for fitness and dance routines
      </p>
    </a>
    <a href="/studios" class="nav-card">
      <SchoolIcon class="card-icon" />
      <h3 class="card-title">Studios</h3>
      <p class="card-description">Find bungee fitness locations and classes</p>
    </a>
  </div>
</section>

<style>
  .content-section {
    padding: 5rem 0;
  }

  .section-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    margin-bottom: 6rem;
  }

  .nav-card {
    padding: 3rem 2rem;
    border: 1px solid var(--neutral-200);
    border-radius: 8px;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    background: var(--white);
  }

  .nav-card:hover {
    border-color: var(--accent);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.06);
  }

  .card-icon {
    width: 32px;
    height: 32px;
    color: var(--accent);
    margin-bottom: 1.5rem;
    stroke-width: 1.5;
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--neutral-900);
    margin-bottom: 0.75rem;
  }

  .card-description {
    color: var(--neutral-500);
    font-size: 0.95rem;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .section-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
      margin-bottom: 4rem;
    }

    .nav-card {
      padding: 2rem 1.5rem;
    }

    .content-section {
      padding: 3rem 0;
    }
  }
</style>
